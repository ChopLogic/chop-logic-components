{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "files": {
    "includes": ["**", "!**/dist", "!**/coverage", "!**/node_modules", "!**/storybook-static"],
    "ignoreUnknown": true
  },
  "overrides": [
    {
      "includes": ["**/*.md", "**/*.mdx", "**/*.scss"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    }
  ],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noNoninteractiveElementToInteractiveRole": "warn",
        "useSemanticElements": "warn",
        "useButtonType": "warn",
        "noStaticElementInteractions": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}
