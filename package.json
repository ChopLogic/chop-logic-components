{
  "name": "chop-logic-components",
  "version": "1.0.0",
  "description": "React UI components library for Chop Logic project",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore --fix",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test-watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SavouryGin/chop-logic-components.git"
  },
  "keywords": [
    "React",
    "TypeScript",
    "Storybook",
    "Chop Logic"
  ],
  "author": "Dmitrii Suroviagin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SavouryGin/chop-logic-components/issues"
  },
  "homepage": "https://github.com/SavouryGin/chop-logic-components#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.6",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "styled-components": "^6.1.9",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^1.5.3"
  },
  "peerDependencies": {
    "react": "^18.3.1"
  }
}
