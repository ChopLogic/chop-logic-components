{
  "name": "chop-logic-components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChopLogic/chop-logic-components.git"
  },
  "version": "3.7.3",
  "description": "Reusable React components and hooks for the Chop Logic project",
  "type": "module",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "start": "storybook dev -p 6006 --no-open",
    "prepublishOnly": "npm run build",
    "build": "vite build",
    "build:storybook": "storybook build",
    "prepare": "npm run build && husky",
    "format": "npm run format:biome && npm run format:prettier",
    "format:biome": "biome format --write",
    "format:prettier": "prettier --write \"**/*.{scss,mdx,md}\"",
    "lint": "npm run lint:biome && npm run lint:prettier",
    "lint:biome": "biome check",
    "lint:prettier": "prettier --check \"**/*.{scss,mdx,md}\"",
    "lint:errors": "biome check --diagnostic-level error --max-diagnostics 100",
    "lint:warnings": "biome check --diagnostic-level warn --max-diagnostics 100",
    "lint:fix": "biome check --write",
    "typecheck": "tsc --pretty --noEmit",
    "test": "vitest",
    "test:ci": "vitest run --passWithNoTests",
    "test:mutation": "stryker run",
    "coverage": "vitest run --coverage",
    "release:version": "node scripts/release-version.js"
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "bash -c 'npm run typecheck'"
    ],
    "*.{js,jsx,ts,tsx,json}": [
      "biome format --write",
      "biome check --write",
      "biome check --diagnostic-level error",
      "npm run test:ci"
    ],
    "*.{scss,md,mdx}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "chop-logic",
    "react",
    "typescript",
    "storybook",
    "styled-components"
  ],
  "author": "Dmitrii Suroviagin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChopLogic/chop-logic-components/issues"
  },
  "homepage": "https://choplogic.github.io/chop-logic-components",
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@storybook/addon-a11y": "^10.2.4",
    "@storybook/addon-docs": "^10.2.4",
    "@storybook/react-vite": "^10.2.4",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "husky-init": "^8.0.0",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "remark-gfm": "^4.0.1",
    "sass": "^1.97.3",
    "storybook": "^10.2.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "storybook": "$storybook"
  },
  "peerDependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  }
}
