{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@enums/*": ["enums/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
