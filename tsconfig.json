{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Prevents TypeScript from emitting files
    "declaration": false, // Let vite-plugin-dts handle declarations
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@enums/*": ["enums/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["node", "@testing-library/jest-dom"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
