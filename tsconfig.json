{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Prevents TypeScript from emitting files
    "declaration": false, // Let vite-plugin-dts handle declarations
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"],
      "@elements/*": ["elements/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@enums/*": ["enums/*"],
      "@models/*": ["models/*"],
      "@contexts/*": ["contexts/*"],
      "@icons/*": ["icons/*"],
      "@hocs/*": ["hocs/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@atoms/*": ["atoms/*"],
      "@molecules/*": ["molecules/*"],
      "@organisms/*": ["organisms/*"]
    },
    "types": ["node", "@testing-library/jest-dom"]
  },
  "include": ["src"],
  "exclude": ["**/__docs__/**", "**/stories/**", "dist", "node_modules"]
}
