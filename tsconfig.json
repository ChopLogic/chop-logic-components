{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"],
      "@components/*": ["components/*"],
      "@elements/*": ["elements/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@enums/*": ["enums/*"],
      "@models/*": ["models/*"],
      "@contexts/*": ["contexts/*"],
      "@icons/*": ["icons/*"],
      "@hocs/*": ["hocs/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"]
    },
    "types": ["node", "@testing-library/jest-dom"]
  },
  "include": ["src"]
}
